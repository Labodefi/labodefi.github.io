    const tabsContainer = document.getElementById('tabs');
    const contentsContainer = document.getElementById('contents');

    Object.keys(data).forEach((level, idx) => {
      const isActive = idx === 0;

      // Créer bouton
      const btn = document.createElement('button');
      btn.textContent = level;
      btn.className = `tab-btn ${isActive ? 'active' : ''}`;
      btn.onclick = () => {
        document.querySelectorAll('.tab-btn').forEach(b => b.classList.remove('active'));
        document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));
        btn.classList.add('active');
        document.getElementById(`tab-${idx}`).classList.add('active');
      };
      tabsContainer.appendChild(btn);

      // Créer contenu
      const content = document.createElement('div');
      content.id = `tab-${idx}`;
      content.className = `tab-content ${isActive ? 'active' : ''}`;

      const header = document.createElement('div');
      header.className = 'level-header';
      header.textContent = level;
      content.appendChild(header);

      const table = document.createElement('table');
      table.className = 'timetable-table';

      const thead = `<thead><tr>
        <th>Jour</th>
        <th>Horaire</th>
        <th>Matière</th>
        <th>Lieux</th>
      </tr></thead>`;
      table.innerHTML = thead;

      const tbody = document.createElement('tbody');
      data[level].forEach(row => {
        const tr = document.createElement('tr');
        tr.innerHTML = `
          <td>${row.jour}</td>
          <td>${row.horaire}</td>
          <td>${row.matiere}</td>
          <td><pre>${row.lieu}</pre></td>
        `;
        tbody.appendChild(tr);
      });
      table.appendChild(tbody);
      content.appendChild(table);
      contentsContainer.appendChild(content);
    });
  </script>

</body>
</html>
